{
  "name": "forge-deploy-lite",
  "version": "0.3.0",
  "description": "One Script library to deploy contracts with forge and register addresses",
  "main": "",
  "scripts": {
    "all": "forge clean && forge fmt && forge build && forge test",
    "clean": "forge clean",
    "build": "forge build",
    "test": "forge test",
    "format": "forge fmt",
    "simulate": "forge script script/DeployCounter.s.sol --rpc-url $CHAIN_NAME",
    "deploy": "forge script script/DeployCounter.s.sol",
    "deploy-anvil": "npm run deploy-anvil-cmd && npm run deploy-anvil-cmd",
    "deploy-anvil-cmd": "forge script script/DeployCounter.s.sol --rpc-url anvil --broadcast --sender $ANVIL_ETH_FROM --private-key $ANVIL_PRIVATE_KEY",
    "deploy-onchain": "forge script script/DeployCounter.s.sol --private-key $PRIVATE_KEY --rpc-url $CHAIN_NAME --broadcast --verify"
  },
  "keywords": [
    "forge",
    "deployment",
    "addresses"
  ],
  "author": "zapaz.eth",
  "license": "MIT"
}