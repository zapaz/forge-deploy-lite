{
  "name": "forge-deploy-lite",
  "version": "0.3.5",
  "description": "An IdemPotent Script to Deploy Multiple Contracts across Various Chains and Register all Addresses for Frontend Dapp",
  "main": "",
  "scripts": {
    "all": "forge clean && forge fmt && forge build && forge test",
    "clean": "forge clean",
    "build": "forge build",
    "test": "forge test",
    "format": "forge fmt",
    "simulate": "forge script script/DeployAll.s.sol --rpc-url $CHAIN_NAME",
    "deploy": "forge script script/DeployAll.s.sol",
    "deploy-anvil": "forge script script/DeployAll.s.sol --rpc-url anvil --broadcast --sender $ANVIL_ETH_FROM --private-key $ANVIL_PRIVATE_KEY",
    "check-anvil": "forge script script/DeployAll.s.sol --rpc-url anvil",
    "deploy-onchain": "forge script script/DeployAll.s.sol --private-key $PRIVATE_KEY --rpc-url $CHAIN_NAME --broadcast --verify",
    "check-onchain": "forge script script/DeployAll.s.sol"
  },
  "keywords": [
    "forge",
    "deployment",
    "addresses"
  ],
  "author": "zapaz.eth",
  "license": "MIT"
}