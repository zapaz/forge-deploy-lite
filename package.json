{
  "name": "forge-deploy-lite",
  "version": "0.3.6",
  "description": "An IdemPotent Script to Deploy Multiple Contracts across Various Chains and Register all Addresses for Frontend Dapp",
  "main": "",
  "scripts": {
    "all": "forge clean && forge fmt && forge build && forge test",
    "clean": "forge clean",
    "build": "forge build",
    "test": "forge test",
    "format": "forge fmt",
    "deploy": "forge script script/DeployAll.s.sol",
    "deploy:anvil": "forge script script/DeployAll.s.sol --fork-url anvil --sender $ANVIL_SENDER --account $ANVIL_ACCOUNT --broadcast",
    "check:anvil": "forge script script/DeployAll.s.sol --fork-url anvil",
    "deploy:testnet": "forge script script/DeployAll.s.sol --fork-url $CHAIN --sender $TESTNET_SENDER --account $TESTNET_ACCOUNT  --broadcast --verify",
    "check:testnet": "forge script script/DeployAll.s.sol"
  },
  "keywords": [
    "forge",
    "deployment",
    "addresses"
  ],
  "author": "zapaz.eth",
  "license": "MIT"
}